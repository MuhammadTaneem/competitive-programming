#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    int a,c=0;
    scanf("%d",&a);
    while(a--)
    {
        int n;
        string s;
        cin>>s;
        n=s.size();
        if(n>10)
        {
            printf("%c%d%c\n",s[0],n-2,s[n-1]);
        }
        else{
            cout<<s<<"\n";
        }
    }
    return 0;
}
