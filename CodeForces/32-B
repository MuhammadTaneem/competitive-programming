#include <bits/stdc++.h>
using namespace std;
 
int main()
{
    string a;
    cin>>a;
    for(int i=0;i<a.size();i++)
    {
        if(a[i]=='.')printf("0");
        else if(a[i]=='-'&&a[i+1]=='.')
        {
            printf("1");
            i++;
        }
        else{
            printf("2");
            i++;
        }
 
    }
    return 0;
}
