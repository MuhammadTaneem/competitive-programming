#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n;
        scanf("%d",&n);

        if(n%2)
        {
            printf("7");
            n-=3;
            
        }
        n/=2;
        while(n--)
        {
            printf("1");
        }
        printf("\n");
    }

    return 0;
}


